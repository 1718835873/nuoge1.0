  flex-direction: column;
  align-items: center;
}
.top-img>image{
  width: 100px;
  height: 100px;
}
.personal-body{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20px;
  border-top: 1px solid #c0c0c0;
