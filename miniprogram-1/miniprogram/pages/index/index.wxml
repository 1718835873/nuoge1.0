            <view class="host">负责人:<text>李老板</text></view>
            <view class="telphone">电话:<text>18324871111</text></view>
            <view class="address">地址:<text>安徽省芜湖市弋江区</text></view>
          </view>
        </view>
        <view class="swiper-cont">
          <view class="left-img">
            <image src="../../images/photo.png"></image>
          </view>
          <view class="right-list-cont">
            <view class="super-name">闲鱼大卖场</view>
            <view class="host">负责人:<text>李老板</text></view>
            <view class="telphone">电话:<text>18324871111</text></view>
            <view class="address">地址:<text>安徽省芜湖市弋江区</text></view>
          </view>
        </view>
        <view class="swiper-cont">
          <view class="left-img">
            <image src="../../images/photo.png"></image>
          </view>
          <view class="right-list-cont">
            <view class="super-name">闲鱼大卖场</view>
            <view class="host">负责人:<text>李老板</text></view>
            <view class="telphone">电话:<text>18324871111</text></view>
