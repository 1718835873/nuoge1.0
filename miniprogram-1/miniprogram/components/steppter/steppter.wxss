/* components/steppter/steppter.wxss */
/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
	width: 100px;
	height: 28px;
	margin:0 auto;
  margin-left: 4px;
}
/*加号与减号*/
.stepper text {
	width: 33px;
	height: 28px;
	line-height: 28px;
	text-align: center;
	float: left;
}

.stepper input {
	float: left;
	margin: 0 auto;
	width: 30px;
  height: 28px;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}
