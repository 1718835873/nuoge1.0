}
.personal-item{
  margin-left: 6px;
}
.modify{
  width: 20px;
  height: 20px;
  margin-right: 6px;
}
/* 对话框样式 */
#model{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  
}
.hidden-model{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2000;
  height: 100%;
  background: rgba(0, 0,0,0.4);
}
.set-txt{
  border:1px solid #c0c0c0;
  /* width: 100px; */
