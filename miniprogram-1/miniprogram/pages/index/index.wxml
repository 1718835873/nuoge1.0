  <view class="cont-tag">
    <view class="tag-item" bindtap="goGonghuo">
      <image class="tag-item-img" src="../../images/zhi.png"></image>
      <view>供货</view>
    </view>
    <view class="tag-item" bindtap="goSupply">
      <image class="tag-item-img" src="../../images/order_icon.png"></image>
      <view>供货单</view>
    </view>
    <view class="tag-item" bindtap="goOut">
      <image class="tag-item-img" src="../../images/chuhuodanguanli.png"></image>
      <view>出货单</view>
